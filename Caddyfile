crm.legalflow.pl {
    # API requests go to Django backend
    handle /api/* {
        reverse_proxy backend:8000
    }
    
    # Admin panel also goes to Django backend
    handle /admin/* {
        reverse_proxy backend:8000
    }
    
    # Static files served by Caddy
    handle /static/* {
        root * /srv
        file_server
    }
    
    # Media files served by Caddy
    handle /media/* {
        root * /srv
        file_server
    }
    
    # Everything else goes to frontend (Vue app)
    handle {
        reverse_proxy frontend:80
    }
}
